# Environment Variables
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/elearning_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=300 # 5 minutes
JWT_ISSUER=elearning-platform
JWT_AUDIENCE=elearning-users

JWT_REFRESH_EXPIRES_IN=2592000 # 30 days

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

# Security
SECURITY_PEPPER=your-security-pepper
ENCRYPTION_KEY=your-256-bit-encryption-key-in-hex
ENCRYPTION_IV=your-96-bit-encryption-iv-in-hex